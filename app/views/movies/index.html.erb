<p id="notice"><%= notice %></p>

<h1 class="h">Listing Movies</h1>
<%= paginate @movies %>
<%= search_form_for @search do |f| %>
    <div class="field">
      <% f.label :title_cont, "Name contains" %>
      <%= f.text_field :title_cont %>
    </div>
    <div class="actions"><%= f.submit "Search" %></div>
    <% end %>
<div class="form-group">
  <div class="col-sm-4 ">
  </div>
</div> <br> <br>
<table  class="table table-bordered">

  <thead>
    <tr class="info">
      <th class="info"><%= link_to "Title", :sort => "title" %></th>
      <th class="info"><%= link_to "Length", :sort => "length" %></th>
      <th class="info"><%= link_to "Release", :sort => "release" %></th>
      <th class="info"><%= link_to "Videoformat", :sort => "videoformat" %></th>
      <th class="info"><%= link_to "Rating", :sort => "rating" %></th>
      <th colspan="3" col="5" class="info">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.length %></td>
        <td><%= movie.release %></td>
        <td><%= movie.videoformat.name %></td>
        <td><%= movie.rating.rate if movie.rating %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

