<p id="notice"><%= notice %></p>

<h1 class="h">Listing Movies</h1>
<div class="form-group">
  <div class="col-sm-4 col-sm-offset-10">
  </div>
</div> <br> <br>
<table id="movies" class="table table-bordered">
  <thead>
    <tr class="info">
      <th>Title</th>
      <th>Length</th>
      <th>Release</th>
      <th>Videoformat</th>
      <th>Rating</th>
      <th colspan="3" col="5">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.length %></td>
        <td><%= movie.release %></td>
        <td><%= movie.videoformat.name %></td>
        <td><%= movie.rating_id %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

