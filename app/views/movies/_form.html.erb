<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="container">
   <div class="col-sm-offset-4">
     <form class="form-horizontal">

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %><br>
    <div class="col-lg-4">
       <%= f.text_field :title, class: "form-control",autofocus: true %>
    </div> <br> <br>
  </div>
     </form>

     <div class="form-group">
    <%= f.label :length, class: "col-sm-2 control-label" %><br>
       <div class="col-sm-4">
    <%= f.time_select :length, class: "form-control",autofocus: true %>
       </div> <br> <br>
  </div>
     <div class="form-group">
    <%= f.label :release, class: "col-sm-2 control-label" %><br>
       <div class="col-sm-4">
    <%= f.number_field :release, class: "form-control",autofocus: true %>
       </div> <br> <br>
  </div>
     <div class="form-group">
    <%= f.label :videoformat_id, class: "col-sm-2 control-label" %><br>
       <div class="col-md-4">
    <%= f.collection_select :videoformat_id, Videoformat.all, :id, :name, class: "form-control",autofocus: true %>
       </div> <br> <br>
  </div>
     <div class="form-group">
    <%= f.label :rating_id, class: "col-sm-2 control-label" %><br>
       <div class="col-sm-4">
    <%= f.collection_select :rating_id, Rating.all, :id, :rate, class: "form-control",autofocus: true %>
     </div> <br> <br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
</form>
</div>
</div>